<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.ProfileActivity"
    tools:showIn="@layout/activity_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp">
        <ImageView
            android:layout_width="120dp"
            android:src="@drawable/ic_launcher"
            android:layout_height="120dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-light"
            android:text="Scholarnetapp basic account settings"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/commondark"
        android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginBottom="12dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Display name"
                    android:id="@+id/textView111"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="name"
                    android:id="@+id/change_name"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_below="@+id/textView111"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_action_edit"
                    android:id="@+id/name"
                    android:padding="2dp"
                    android:background="@drawable/circle"
                    android:layout_above="@+id/change_name"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp" />
            </RelativeLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/commondark"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:layout_marginBottom="1dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:textColor="#000"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="12dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Year of Study"
                android:id="@+id/textView11"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="year"
                android:id="@+id/change_year"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-light"
                android:layout_below="@+id/textView11"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_action_edit"
                android:id="@+id/year"
                android:padding="2dp"
                android:background="@drawable/circle"
                android:layout_above="@+id/change_year"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="sans-serif-light"
                android:text="Dear scholarnet users, huge change are expected to occur on your account setting on the next release , enjoy modifying the current setting to reach your deman!"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

 </LinearLayout>
