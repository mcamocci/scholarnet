<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="6dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="User"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/user"
                android:layout_alignTop="@+id/imageView6"
                android:layout_toRightOf="@+id/imageView6"
                android:layout_toEndOf="@+id/imageView6" />

            <ImageView
                android:id="@+id/article_option"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_action_overflow_dark"
                android:layout_alignTop="@+id/imageView6"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:fontFamily="sans-serif-light"
                android:text="Date"
                android:layout_alignTop="@+id/user"
                android:layout_toLeftOf="@+id/article_option"
                android:layout_toStartOf="@+id/article_option" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="4dp"
                android:layout_marginTop="2dp"
                android:id="@+id/imageView6"
                android:src="@drawable/ic_account_circle"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif-light"
            android:text="The world is full of good people , some of them are really good and amazing they can do almost everything in computer"
            android:textColor="#000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:gravity="right">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_favorite_outline"
                android:text="recomendation" />

            <TextView
                android:id="@+id/recommendation_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="sans-serif-light"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:padding="2dp"
                android:text="44"
                android:textColor="#000" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_comment_dark"
                android:layout_marginLeft="2dp"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="4dp"
                />

            <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="2dp"
                android:padding="2dp"
                android:text="34"
                android:textColor="#000" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/ic_action_picture"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="4dp"
                android:text="images" />

            <TextView
                android:id="@+id/image_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="2dp"
                android:gravity="right"
                android:fontFamily="sans-serif-light"
                android:padding="2dp"
                android:text="04"
                android:textColor="#000" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>